{
  "name": "chill",
  "version": "0.0.0",
  "description": "DIY Home Media Server",
  "type": "module",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "scripts": {
    "dev": "nodemon --watch './server' -e ts --exec 'node --loader @esbuild-kit/esm-loader ./server/index.dev.ts'",
    "build": "vite build && pnpm build-receiver",
    "build-receiver": "vite build --config receiver.vite.config.js",
    "start": "npm run build && node --loader @esbuild-kit/esm-loader ./server/index.ts",
    "docker": "docker-compose up --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:publish": "docker build -t adalfonso/chill:latest . && docker push adalfonso/chill:latest",
    "check": "tsc --noEmit && tsc --noEmit && npm run lint && jest",
    "lint": "eslint ./{server,client,common}/**/*.{mts,ts,tsx} --quiet",
    "test": "jest --coverage --watchAll",
    "viz": "npx vite-bundle-visualizer"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-regular-svg-icons": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fortawesome/react-fontawesome": "^0.1.19",
    "@reduxjs/toolkit": "^1.9.2",
    "@trpc/client": "^10.11.1",
    "@trpc/server": "^10.11.1",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "lodash-es": "^4.17.21",
    "mongodb": "^5.0.1",
    "mongoose": "^6.9.2",
    "music-metadata": "^7.13.3",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "react": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.1",
    "redis": "^4.6.4",
    "sharp": "^0.30.7",
    "string-similarity": "^4.0.4",
    "superjson": "^1.12.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@redux-devtools/core": "^3.13.1",
    "@types/chrome": "^0.0.217",
    "@types/chromecast-caf-receiver": "^6.0.8",
    "@types/chromecast-caf-sender": "^1.0.5",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.45",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/passport-jwt": "^3.0.8",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.31.1",
    "@types/string-similarity": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitejs/plugin-react-swc": "^3.1.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "react-dom": "^18.2.0",
    "sass": "^1.58.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.2"
  }
}
