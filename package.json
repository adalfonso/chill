{
  "name": "chill",
  "version": "0.0.0",
  "description": "DIY Home Media Server",
  "type": "module",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "scripts": {
    "dev": "pnpm prisma:build && nodemon --watch './server' -e ts --exec 'node --loader @esbuild-kit/esm-loader ./server/index.dev.ts'",
    "build": "pnpm prisma:build && pnpm prisma migrate dev && vite build && pnpm build-receiver",
    "build-receiver": "vite build --config receiver.vite.config.js",
    "start": "pnpm build && node --loader @esbuild-kit/esm-loader ./server/index.ts",
    "docker": "docker-compose up --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:publish": "docker build -t adalfonso/chill:latest . && docker push adalfonso/chill:latest",
    "check": "tsc --noEmit && pnpm lint && jest",
    "lint": "eslint ./{server,client,common}/**/*.{mts,ts,tsx} --quiet",
    "test": "jest --coverage --watchAll",
    "viz": "npx vite-bundle-visualizer",
    "prisma:build": "npx prisma generate"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@preact/signals": "^1.3.0",
    "@prisma/client": "5.17.0",
    "@reduxjs/toolkit": "^1.9.7",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "music-metadata": "^10.3.1",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "preact": "^10.23.2",
    "react-redux": "^8.1.3",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "wouter-preact": "^3.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@eslint/js": "^9.9.1",
    "@preact/preset-vite": "^2.9.0",
    "@redux-devtools/core": "^3.14.0",
    "@types/chrome": "^0.0.217",
    "@types/chromecast-caf-receiver": "^6.0.17",
    "@types/chromecast-caf-sender": "^1.0.10",
    "@types/compression": "^1.7.5",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^17.0.45",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^3.0.13",
    "@types/react-dom": "^18.3.0",
    "@types/sharp": "^0.31.1",
    "eslint": "^9.9.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "globals": "^15.9.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^4.5.3"
  }
}
