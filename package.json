{
  "name": "chill",
  "version": "0.0.0",
  "description": "DIY Home Media Server",
  "type": "module",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "scripts": {
    "dev": "pnpm prisma:build && nodemon --watch './server' -e ts --exec 'node --loader @esbuild-kit/esm-loader ./server/index.dev.ts'",
    "build": "pnpm prisma:build && pnpm prisma migrate dev && vite build && pnpm build-receiver",
    "build-receiver": "vite build --config receiver.vite.config.js",
    "start": "pnpm build && node --loader @esbuild-kit/esm-loader ./server/index.ts",
    "docker": "docker-compose up --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:publish": "docker build -t adalfonso/chill:latest . && docker push adalfonso/chill:latest",
    "check": "tsc --noEmit && pnpm lint && jest",
    "lint": "eslint ./{server,client,common}/**/*.{mts,ts,tsx} --quiet",
    "test": "jest --coverage --watchAll",
    "viz": "npx vite-bundle-visualizer",
    "prisma:build": "npx prisma generate"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@preact/signals-react": "^2.1.0",
    "@prisma/client": "5.17.0",
    "@reduxjs/toolkit": "^1.9.3",
    "@trpc/client": "^10.15.0",
    "@trpc/server": "^10.15.0",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "music-metadata": "^7.13.3",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "react": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0",
    "redis": "^4.6.5",
    "sharp": "^0.33.1",
    "string-similarity": "^4.0.4",
    "superjson": "^1.12.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@redux-devtools/core": "^3.13.1",
    "@types/chrome": "^0.0.217",
    "@types/chromecast-caf-receiver": "^6.0.17",
    "@types/chromecast-caf-sender": "^1.0.10",
    "@types/compression": "^1.7.2",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^17.0.45",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/passport-jwt": "^3.0.8",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.31.1",
    "@types/string-similarity": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react-swc": "^3.2.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "prisma": "^5.17.0",
    "react-dom": "^18.2.0",
    "sass": "^1.59.2",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  }
}
