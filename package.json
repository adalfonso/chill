{
  "name": "chill",
  "version": "0.0.0",
  "description": "DIY Home Media Server",
  "type": "module",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "scripts": {
    "dev": "pnpm prisma:build && tsx watch --inspect=0.0.0.0:9229 ./server/index.dev.ts",
    "build": "pnpm prisma:build && pnpm prisma migrate deploy && vite build && pnpm build-receiver",
    "build-receiver": "vite build --config receiver.vite.config.js",
    "start": "pnpm build && tsx ./server/index.ts",
    "docker": "docker-compose up --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:publish": "docker build -t adalfonso/chill:latest . && docker push adalfonso/chill:latest",
    "check": "tsc --noEmit && pnpm lint && jest",
    "lint": "eslint ./{server,client,common}/**/*.{mts,ts,tsx} --quiet",
    "test": "jest --coverage --watchAll",
    "viz": "npx vite-bundle-visualizer",
    "prisma:build": "npx prisma format && npx prisma generate"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.19.1",
    "@preact/signals": "^2.7.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "7.3.0",
    "@trpc/client": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "@types/ws": "^8.18.1",
    "compression": "^1.8.1",
    "connect-history-api-fallback": "^2.0.0",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "music-metadata": "^10.9.1",
    "nanoid": "^5.1.6",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "preact": "^10.28.3",
    "redis": "^4.7.1",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "wouter-preact": "^3.9.0",
    "ws": "^8.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@preact/preset-vite": "^2.10.3",
    "@redux-devtools/core": "^3.14.0",
    "@types/chrome": "^0.0.270",
    "@types/chromecast-caf-receiver": "^6.0.25",
    "@types/chromecast-caf-sender": "^1.0.11",
    "@types/compression": "^1.8.1",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.12",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^3.0.13",
    "@types/react-dom": "^18.3.7",
    "@types/sharp": "^0.31.1",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^15.15.0",
    "jest": "^27.5.1",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
