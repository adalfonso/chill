{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "ES6",
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@reducers/*": ["client/state/reducers/*"],
      "@hooks/*": ["client/hooks/*"],
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@common/*": ["common/*"]
    }
  }
}
