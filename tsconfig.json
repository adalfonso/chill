{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@common/*": ["common/*"],
      "@reducers/*": ["client/state/reducers/*"]
    }
  }
}
